    <!-- Servlet Configuration ========================================== -->
    <context-param>
        <param-name>UPLOAD_IMAGE_PATH</param-name>
        <param-value>/imageupload</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>